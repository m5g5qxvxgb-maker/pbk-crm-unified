{
  "name": "pbk-crm-unified",
  "version": "1.0.0",
  "description": "Unified PBK CRM System with Retell AI, Email, and Copilot integration",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "copilot-agent"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:copilot": "cd copilot-agent && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm run start",
    "start:backend": "cd backend && npm run start",
    "start:copilot": "cd copilot-agent && npm run start",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "setup": "npm install && npm run db:migrate && npm run db:seed",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test"
  },
  "keywords": [
    "crm",
    "pbk",
    "construction",
    "retell-ai",
    "telegram",
    "openai"
  ],
  "author": "PBK Construction",
  "license": "PROPRIETARY",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "playwright": "^1.57.0",
    "postcss": "^8.4.33",
    "puppeteer": "^24.34.0",
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.562.0",
    "react-hot-toast": "^2.6.0",
    "recharts": "^3.6.0"
  }
}
